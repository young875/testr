{% extends 'admin.base.html.twig' %}


{% block title %} Ajouter un type de boite{% endblock %}

{% block stylesheets %}{% endblock %}
{% block body %}

    {% include 'admin/partials/navbar.html.twig'%}


<div class="content-wrapper">
    <div class="container-fluid">
        {% include 'admin/partials/flash.html.twig'%}
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Admin</a>
            </li>
            <li class="breadcrumb-item active">Liste des types de boites</li>
        </ol>
        <a href="{{ path('admin_boite_add') }}"><button class="btn btn-success">Ajouter un type de boite</button></a>
        <table class="table table-striped" style="margin-top: 5px;">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Type de Boite</th>
                <th scope="col">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for boite in boites %}
                <tr>

                    <th scope="col">{{ boite.id }}</th>
                    <th scope="col">{{ boite.boite }}</th>
                    <th scope="col">
                        <a href="{{ path('admin_boite_update', {id: boite.id}) }}">
                            <button class="btn btn-warning">modifier <i class="fa fa-edit"></i></button>
                        </a>
                        <a href="{{ path('admin_boite_delete', {id: boite.id}) }}">
                            <button class="btn btn-danger">supprimer <i class="fa fa-trash"></i></button>
                        </a>
                    </th>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}
