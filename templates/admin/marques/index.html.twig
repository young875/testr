{% extends 'admin.base.html.twig' %}


{% block title %} Liste des marques{% endblock %}

{% block stylesheets %}{% endblock %}
{% block body %}

    {% include 'admin/partials/navbar.html.twig'%}


    <div class="content-wrapper">
        <div class="container-fluid">
            {% include 'admin/partials/flash.html.twig'%}
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Admin</a>
                </li>
                <li class="breadcrumb-item active">Liste des marques</li>
            </ol>
            <a href="{{ path('admin_marque_add') }}"><button class="btn btn-success">Ajouter une marque</button></a>
            <table class="table table-striped" style="margin-top: 5px;">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Type type d'Ã©tat</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for marque in marques %}
                    <tr>

                        <th scope="col">{{ marque.id }}</th>
                        <th scope="col"><img src="{{ vich_uploader_asset(marque, 'imageFile') }}" alt="{{ marque.marque }}" style="height: 40px"></th>
                        <th scope="col">
                            <a href="{{ path('admin_marque_update', {id: marque.id}) }}">
                                <button class="btn btn-warning">modifier <i class="fa fa-edit"></i></button>
                            </a>
                            <a href="{{ path('admin_marque_delete', {id: marque.id}) }}">
                                <button class="btn btn-danger">supprimer <i class="fa fa-trash"></i></button>
                            </a>
                        </th>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
